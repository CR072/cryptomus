{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": false,
      "outDir": "./dist",
      "rootDir": "./",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/*",
      "index.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }